<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0" object-id="rdmSyncSource">

    <list result-mapping="['content']" count-mapping="['totalElements']">
        <rest method="GET" filters-separator="&amp;">
            ${rdm.sync.admin.backend.path}/sync/admin/sources
        </rest>
    </list>

    <unique filters="id">
        <rest method="GET">
            ${rdm.sync.admin.backend.path}/sync/admin/sources/{id}
        </rest>
    </unique>

    <fields>
        <field id="id" domain="string">
            <select mapping="['code']"/>
            <filters>
                <eq filter-id="id">code={id}</eq>
            </filters>
        </field>

        <field id="name" domain="string">
            <select/>
        </field>

        <field id="link" domain="string">
            <select/>
        </field>

        <field id="token" domain="string">
            <select/>
        </field>

    </fields>
</query>