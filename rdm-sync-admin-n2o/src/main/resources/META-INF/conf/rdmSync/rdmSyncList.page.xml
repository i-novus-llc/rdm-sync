<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0" name="Справочники">

    <table query-id="rdmSync" route="/main">
        <pagination/>

        <filters>
            <row>
                <input-text id="code" label="Код справочника"/>
                <input-text id="name" label="Название справочника"/>
            </row>
        </filters>

        <columns>
            <column text-field-id="code" label="Код справочника" sorting-direction="asc"/>
            <column text-field-id="name" label="Наименование справочника"/>
            <column text-field-id="source" label="Источник"/>
            <column text-field-id="version" label="Версия справочника"/>
            <column text-field-id="versioned" label="Поддержка версионности"/>
            <column text-field-id="autoUpdatable" label="Автоматическое обновление"/>
            <column text-field-id="lastDateTime" label="Дата последнего обновления">
                <text format="date DD.MM.YYYY"/>
            </column>
            <column text-field-id="lastStatus" label="Статус последнего обновления"/>
        </columns>
    </table>

</simple-page>