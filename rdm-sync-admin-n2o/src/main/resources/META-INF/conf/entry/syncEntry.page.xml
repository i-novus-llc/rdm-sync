                        <enabling on="refBook">
                            (typeof refBook != 'undefined' &amp;&amp; refBook?.id != null)
                        </enabling>
                    </dependencies>
                </checkbox>

                <checkbox id="versioned" label="${sync.entry.page.refbook.versioned}" default-value="false" label-class="w-50">
