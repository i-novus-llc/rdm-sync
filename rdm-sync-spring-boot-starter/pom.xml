        <version>1.1.9-SNAPSHOT</version>
    </parent>

    <properties>
        <jaxb.api.version>2.3.1</jaxb.api.version>

        <jacoco.skip>false</jacoco.skip>
        <sonar.coverage.exclusions>**/*SyncConfig.java, **/*SyncProperties.java, **/*LiquibaseParameters.java, **/*SyncAutoConfiguration.java, **/*RdmSyncConfigurer.java, **/*Enum.java</sonar.coverage.exclusions>
    </properties>

    <dependencies>

